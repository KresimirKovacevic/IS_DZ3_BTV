@model UpravljanjeProjektima.ProjektInfoList

@{
    ViewBag.Title = "Projekti";
}

<table class="tablica">
    <tr>        
        <th>
            Naziv projekta
        </th>        
				<th></th>
    </tr>

		@foreach (var item in Model) {
    <tr>				        
        <td>
					 @Html.ActionLink(item.NazProjekta, "Details", new { SifProjekta = item.SifProjekta })
        </td>       			
				<td>            
						@using (Html.BeginForm("Delete", "Projekt", new { SifProjekta = item.SifProjekta }))
						{
							<a class="delete">Obriši</a>          
						}
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Novi projekt", "Create")
</p>
